<div class="page-header">
  <h3>List #<%= @list.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @list.title %></dd>

      <dt>Board</dt>
      <dd><a href="/boards/<%=@list.board_id%>"><%= @list.board.title %></a></dd>

      <dt>Position order</dt>
      <dd><%= @list.position_order %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/lists" class="btn btn-default">
        Back
      </a>
      <a href="/lists/<%= @list.id %>/edit" class="btn btn-default">
        Edit
      </a>
      <a href="/delete_list/<%= @list.id %>" class="btn btn-default" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
