<div class="page-header">
  <h3>Card #<%= @card.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @card.title %></dd>

      <dt>Description</dt>
      <dd><%= @card.description %></dd>

      <dt>List</dt>
      <dd><a href="/lists/<%= @card.list_id %>"> <%=@card.list.title %></a></dd>

      <dt>Position order</dt>
      <dd><%= @card.position_order %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/cards" class="btn btn-default">
        Back
      </a>
      <a href="/cards/<%= @card.id %>/edit" class="btn btn-default">
        Edit
      </a>
      <a href="/delete_card/<%= @card.id %>" class="btn btn-default" rel="nofollow">
        Delete
      </a>
    </div>

    <h2> Notes </h2>
    <ol>
    <% @card.notes.each do |note| %>
      <li>
        Body: <%= note.body %>
      </li>

      <div>
        <form action="/create_note" method="post">

          <input type="hidden" name="card_id" value= "<%=@card.id%>">

          <div class="form-group">
            <label for="title" class="control-label">
              Body
            </label>
            <input type="text" id="body" name="body" placeholder="Body" class="form-control">
          </div>


        <button class="btn btn-success">
          Create Note
        </button>
      </form>
      </div>

    </ol>
    <%end%>

    <h2> Tags </h2>





  </div>
</div>
